<script>
    document.getElementById('cadastroForm').addEventListener('submit', function(event) {
        event.preventDefault(); // Evita o envio do formulário

        // Aqui você pode realizar o envio dos dados do formulário para o servidor, por exemplo, usando AJAX

        // Após o envio bem-sucedido, exiba o alerta ao usuário
        const dataEnvio = new Date().toLocaleString();
        const mensagem = `O cadastro foi realizado com sucesso em ${dataEnvio}.`;
        document.getElementById('mensagem').textContent = mensagem;
        $('#modalMensagem').modal('show');
    });
</script>