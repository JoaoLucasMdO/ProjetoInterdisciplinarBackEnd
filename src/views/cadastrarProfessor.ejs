<%- include('header'); -%>

    <%- include('menuLateral'); -%>

        <body>
            <div class="container mt-5">
                <div class="row">
                    <!-- Espaço para cadastrar à esquerda -->
                    <div class="col-md-6">
                        <h3>Cadastro de Professores</h3>
                        <form id="professorForm">
                            <div class="form-group">
                                <label for="name">Nome:</label>
                                <input type="text" id="name" name="name" placeholder="Nome do Professor" required
                                    class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="cpf">CPF:</label>
                                <input type="text" id="cpf" name="cpf" placeholder="CPF do Professor" required
                                    class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary">Salvar</button>
                            <button type="button" class="btn btn-secondary">Cancelar</button>
                        </form>
                    </div>

                    <!-- Espaço para listar à direita -->
                    <div class="col-md-6">
                        <h3>Professores Cadastrados</h3>
                        <div class="table-container">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>CPF</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody id="professor-list">
                                    <!-- Itens da lista serão adicionados dinamicamente aqui -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Adicione os scripts do Bootstrap e o seu script personalizado -->
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
            <script>
                const access_token = localStorage.getItem('token') || null
                document.getElementById('professorForm').addEventListener('submit', function (event) {
                    event.preventDefault() // evita o recarregamento
                    let professor = {} // Objeto professor
                    professor = {
                        "nome": document.getElementById('cnpj1').value,
                        "cpf": document.getElementById('razao-social2').value
                    }/* Fim do objeto */

                    fetch(`${urlBase}/professor`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'access-token': access_token
                        },
                        body: JSON.stringify(professor)
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.status = 200) {
                                alert('Professor incluído com sucesso!')
                                //limpamos o formulário
                                document.getElementById('formPrestador').reset()
                            } else if (data.errors) {
                                const errorMessages = data.errors.map(error => error.msg).join('\n')
                                document.getElementById('mensagem').innerHTML = `<span class='text-danger'> 
                                ${errorMessages}</span>`
                                resultadoModal.show() //Mostra o modal
                            }
                        })
                })
            </script>
        </body>

        <%- include('footer'); -%>