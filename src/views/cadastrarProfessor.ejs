<%- include('header'); -%>

<%- include('menuLateral'); -%>

<body>
    <div class="container mt-5">
        <div class="row">
            <!-- Espaço para cadastrar à esquerda -->
            <div class="col-md-6">
                <h3>Cadastro de Professores</h3>
                <form id="professor-form">
                    <div class="form-group">
                        <label for="name">Nome:</label>
                        <input type="text" id="name" name="name" placeholder="Nome do Professor" required class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="cpf">CPF:</label>
                        <input type="text" id="cpf" name="cpf" placeholder="CPF do Professor" required class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <button type="button" class="btn btn-secondary">Cancelar</button>
                </form>
            </div>

            <!-- Espaço para listar à direita -->
            <div class="col-md-6">
                <h3>Professores Cadastrados</h3>
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>CPF</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody id="professor-list">
                            <!-- Itens da lista serão adicionados dinamicamente aqui -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Adicione os scripts do Bootstrap e o seu script personalizado -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.getElementById('professor-form').addEventListener('submit', function (event) {
            event.preventDefault(); // Evita o envio do formulário

            const name = document.getElementById('name').value;
            const cpf = document.getElementById('cpf').value;

            const newRow = document.createElement('tr');

            newRow.innerHTML = `
                <td>${name}</td>
                <td>${cpf}</td>
                <td>
                    <div class="btn-group" role="group">
                        <button class="btn btn-sm btn-primary edit-button">Editar</button>
                        <button class="btn btn-sm btn-danger delete-button ml-2">Excluir</button>
                    </div>
                </td>
            `;

            document.getElementById('professor-list').appendChild(newRow);

            document.getElementById('name').value = '';
            document.getElementById('cpf').value = '';

            newRow.querySelector('.edit-button').addEventListener('click', editProfessor);
            newRow.querySelector('.delete-button').addEventListener('click', deleteProfessor);
        });

        function deleteProfessor(event) {
            const row = event.target.closest('tr');
            row.remove();
        }

        function editProfessor(event) {
            const row = event.target.closest('tr');
            const name = row.children[0].textContent;
            const cpf = row.children[1].textContent;

            document.getElementById('name').value = name;
            document.getElementById('cpf').value = cpf;

            row.remove();
        }

        document.addEventListener('click', function (event) {
            if (event.target.classList.contains('delete-button')) {
                deleteProfessor(event);
            }
            if (event.target.classList.contains('edit-button')) {
                editProfessor(event);
            }
        });
    </script>
</body>

<%- include('footer'); -%>
