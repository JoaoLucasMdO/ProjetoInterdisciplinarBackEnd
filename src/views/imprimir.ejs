<%- include('header'); -%>

<%- include('menuLateral'); -%>

<body>
    <div class="container mt-5">
        <h3 class="mb-4">Cadastro de Professores</h3>
        <form id="professor-form">
            <div class="mb-3">
                <label for="professor-name" class="form-label">Nome do Professor:</label>
                <input type="text" id="professor-name" name="professor-name" placeholder="Digite o nome do professor" required class="form-control">
            </div>
            <div class="mb-3">
                <label for="materia" class="form-label">Matéria:</label>
                <input type="text" id="materia" name="materia" placeholder="Digite a matéria" required class="form-control">
            </div>
            <div class="mb-3">
                <label for="horario" class="form-label">Horário:</label>
                <input type="text" id="horario" name="horario" placeholder="Digite o horário" required class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </form>

        <!-- Lista de Professores -->
        <div id="professor-list" class="mt-4"></div>

        <!-- JavaScript para manipular o formulário e a impressão -->
        <script>
            const professorForm = document.getElementById('professor-form');
            const professorList = document.getElementById('professor-list');

            professorForm.addEventListener('submit', function (event) {
                event.preventDefault();
                const professorName = document.getElementById('professor-name').value;
                const materia = document.getElementById('materia').value;
                const horario = document.getElementById('horario').value;

                // Você pode processar os dados do professor aqui (por exemplo, armazená-los em um array ou banco de dados)

                // Exibir o professor na lista
                const newProfessor = document.createElement('p');
                newProfessor.textContent = `Professor: ${professorName} | Matéria: ${materia} | Horário: ${horario}`;
                professorList.appendChild(newProfessor);

                // Limpar os campos de entrada
                document.getElementById('professor-name').value = '';
                document.getElementById('materia').value = '';
                document.getElementById('horario').value = '';
            });

            // Função para imprimir a lista de professores
            function printProfessors() {
                const printWin = window.open('');
                printWin.document.write('<h3>Professores Cadastrados:</h3>');
                printWin.document.write(professorList.innerHTML);
                printWin.print();
                printWin.close();
            }
        </script>

        <!-- Botão de Impressão -->
        <button onclick="printProfessors()" class="btn btn-secondary mt-3">Imprimir Professores</button>
    </div>

    <!-- Adicione os scripts do Bootstrap no final do body -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

